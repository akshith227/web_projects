<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Blog App with REST</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" href="/app.css">
    <link rel="stylesheet" type="text/css" media="screen" href="/indexPage/index.css" />
</head>

<body>
    <div class="ui fixed inverted menu">
        <div class="ui container">
            <div class="header item"><i class="code icon"></i> Blog Site</div>
            <a href="/" class="item">Home</a>
            <a href="/blogs/new" class="item">Create</a>
        </div>
    </div>
    <div class="ui main text container">
        <div class="ui huge header">RESTful Blog App</div>
        <div class="ui top  attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>">
                            <%=blog.title%></a>
                        <div class="meta">
                            <span>
                                <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p>
                                <%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script src="/indexPage/index.js"></script>
</body>

</html>